{
    "name": "krepysh-spec/steam-market-parser",
    "type": "library",
    "homepage": "https://github.com/krepysh-spec/steam-market-parser",
    "license": "MIT",
    "description": "",
    "keywords": [
        "krepysh",
        "steam",
        "steam-market",
        "csgo",
        "dota2",
        "steam-parser",
        "parser"
    ],
    "authors": [
        {
            "name": "Evgeniy Mykhalichenko",
            "email": "evgeniymykhalichenko@gmail.com",
            "homepage": "https://github.com/krepysh-spec"
        }
    ],
    "require": {
        "php": ">=8.1",
        "krepysh-spec/steam-enums": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.8",
        "vimeo/psalm": "^4.24"
    },
    "autoload": {
        "psr-4": {
            "KrepyshSpec\\SteamMarketParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KrepyshSpec\\SteamMarketParser\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@test:phpunit",
            "@test:cs",
            "@test:psalm"
        ],
        "test:phpunit": "./vendor/bin/phpunit",
        "test:cs": "./vendor/bin/php-cs-fixer fix --dry-run --diff --config=.php-cs-fixer.php",
        "test:psalm": "./vendor/bin/psalm --no-diff --no-cache",
        "fix:cs": "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php"
    }
}
